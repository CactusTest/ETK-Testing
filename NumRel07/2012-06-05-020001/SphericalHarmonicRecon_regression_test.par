#News profiling---------------------------
NullNews::write_spherical_harmonics = no
NullNews::debug_output = no
NullNews::interp_to_constant_uBondi = no
NullNews::news_interp_order = 4
NullNews::mask_Psi4 = yes
NullNews::mask_NewsB = yes

